    border-radius: 20px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }
  #header {
    background: #4a90e2;
    color: white;
    padding: 18px;
    font-size: 20px;
    font-weight: 600;
    text-align: center;
    letter-spacing: 0.05em;
  }
  #chat {
    flex-grow: 1;
    padding: 15px;
    overflow-y: auto;
    background: #f9faff;
  }
  .bot, .user {
    max-width: 75%;
    margin: 10px 0;
