<body>

<div id="chatbot-container">
  <div id="header">ShopAssist – Dein Shop-Chatbot</div>
  <div id="chat"></div>
  <div id="input-area">
    <input id="input" placeholder="Schreibe deine Frage hier..." autocomplete="off" />
    <button id="send">Senden</button>
  </div>
</div>

<script>
const chat = document.getElementById('chat');
const input = document.getElementById('input');
const send = document.getElementById('send');

const shopName = "ShopAssist";

function appendMessage(text, sender) {
  const div = document.createElement('div');
  div.textContent = text;
  div.className = sender;
  chat.appendChild(div);
  chat.scrollTop = chat.scrollHeight;
}

function botResponse(text) {
  const input = text.toLowerCase();

  if (/^(hi|hallo|hey|guten (morgen|tag|abend))/.test(input)) {
    return `Hallo! Willkommen bei ${shopName}. Wie kann ich dir heute helfen?`;
  }

  if (/wie (geht('|’)?s|geht es) dir/.test(input)) {
    return `Danke der Nachfrage! Ich bin hier, um dir bei allen Fragen zu ${shopName} zu helfen. Was möchtest du wissen?`;
  }

  if (input.includes("versand") || input.includes("lieferzeit") || input.includes("wann kommt")) {
    return `Unsere Lieferungen dauern in der Regel 2-4 Werktage. Wir bei ${shopName} geben unser Bestes, damit deine Bestellung schnell ankommt!`;
  }

  if (input.includes("rückgabe") || input.includes("retoure") || input.includes("zurückgeben")) {
    return `Du kannst Artikel innerhalb von 14 Tagen kostenlos an ${shopName} zurückgeben. Wenn du Hilfe bei der Retoure brauchst, melde dich gern bei uns!`;
  }

  if (input.includes("zahlung") || input.includes("bezahlen") || input.includes("zahlungsmethoden")) {
    return `${shopName} akzeptiert PayPal, Kreditkarte, Klarna und Sofortüberweisung.`;
  }

  if (input.includes("rechnung") || input.includes("quittung")) {
    return `Die Rechnung wird dir automatisch per E-Mail zugesendet. Falls du sie nicht findest, hilft dir ${shopName} gern weiter.`;
  }

  if (input.includes("kontakt") || input.includes("hilfe") || input.includes("support")) {
    return `Du kannst unser Support-Team von ${shopName} jederzeit per E-Mail unter support@shopassist.de erreichen.`;
  }

  if (/danke|vielen dank/.test(input)) {
    return `Gern geschehen! ${shopName} freut sich, dir helfen zu können.`;
  }

  return `Entschuldige, ich habe deine Frage nicht ganz verstanden. Bitte formuliere sie anders oder kontaktiere unser Team bei ${shopName}.`;
}

send.addEventListener('click', () => {
  const userText = input.value.trim();
  if (!userText) return;
  appendMessage(userText, 'user');
  setTimeout(() => {
    appendMessage(botResponse(userText), 'bot');
  }, 600);
  input.value = '';
});

input.addEventListener('keypress', e => {
  if (e.key === 'Enter') send.click();
});

appendMessage(`Hallo! Ich bin dein ${shopName} Chatbot. Wie kann ich dir heute helfen?`, 'bot');
</script>

</body>
</html>
